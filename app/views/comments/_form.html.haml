.mt-4.bg-gray-50.rounded-lg.p-4{"data-comment-form-target" => "form"}
  = form_with(model: [task, Comment.new], class: "space-y-4") do |f|
    %div
      = f.text_area :content,                                                                                                                                                                          |
        placeholder: "Add a comment...",                                                                                                                                                               |
        class: "w-full rounded-lg border-0 bg-white py-2 px-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-purple-600 sm:text-sm", |
        rows: 3                                                                                                                                                                                        |
    .flex.justify-end.space-x-3
      %button.px-4.py-2.text-sm.font-medium.text-gray-700.bg-white.border.border-gray-300.rounded-md.hover:bg-gray-50.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-purple-500{"data-action" => "click->comment-form#cancel", :type => "button"}
        Cancel
      = f.submit "Add Comment",                                                                                                                                                  |
        class: "px-4 py-2 text-sm font-medium text-white bg-purple-600 rounded-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" |

.space-y-4
  = turbo_stream_from "tasks"
  = turbo_frame_tag "tasks_list" do
    - tasks.each do |task|
      = render "tasks/task", task: task
    - if tasks.empty?
      .text-center.py-12
        %h3.text-lg.font-medium.text-gray-900 No tasks found
        %p.mt-2.text-sm.text-gray-500 Try adjusting your search or create a new task

.max-w-3xl.mx-auto
  - flash.each do |type, message|
    - color = case type.to_sym
      - when :notice then "bg-green-100 border-green-400 text-green-800"
      - when :alert then "bg-red-100 border-red-400 text-red-800"
      - else "bg-blue-100 border-blue-400 text-blue-800"
    .flex.items-center.justify-between.px-4.py-3.rounded-md.shadow-md.border.mb-6(class=color)
      .flex.items-center.gap-2
        - if type.to_sym == :notice
          %svg.h-5.w-5.text-green-500{:fill => "currentColor", :viewBox => "0 0 20 20"}
            %path{:d => "M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"}
        - elsif type.to_sym == :alert
          %svg.h-5.w-5.text-red-500{:fill => "currentColor", :viewBox => "0 0 20 20"}
            %path{:d => "M18.364 17.364A9 9 0 112.636 1.636 9 9 0 0118.364 17.364z"}
        %span.font-medium= message
      %button.ml-4.text-xl.text-gray-500.hover:text-gray-700.transition{"aria-label" => "Close", "onclick" => "this.parentElement.parentElement.remove()"} &times;
